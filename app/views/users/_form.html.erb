

<div class="section ">
    <div class="container">
        <div class="columns is-centered">

            <div class="column is-4">

                <h2 class="title is-2">Contact Me Form</h2>

                <%= simple_form_for(@user) do |f| %>

                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

                    <div class="form-inputs">

                    <div class="field">
                        <div class="control">
                             <%= f.input :name, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }  %>
                        </div>
                    </div>


                    <div class="field">
                        <div class="control">
                            <%= f.input :email, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }  %>
                        </div>
                    </div>


                    <div class="field">
                        <div class="control">
                                <%= f.input :body, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }  %>
                        </div>
                    </div>

                    </div>

                        <div class="form-actions">
                                <%= f.button :submit, "Send Email", class:"button is-info is-medium btn-light"  %>
                        </div>
                    <% end %>
            </div>
        </div>
    </div>
</div>